<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    tools:context=".Menu">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="28.3"
        android:padding="3dp"
        android:orientation="horizontal">


        <ImageButton

            android:id="@+id/horariovisitas"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/horario_visita" />

        <ImageButton

            android:id="@+id/consultamedica"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/consulta_hora"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="28.3"
        android:padding="3dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/consultapaciente"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/consulta_paciente" />

        <ImageButton

            android:id="@+id/donasangre"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/dona_sangre" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="28.3"
        android:padding="3dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/carteraservicios"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/blanco"
            android:src="@drawable/cartera_servicios" />

        <ImageButton
            android:id="@+id/farmaciaturno"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/farmacia_turno" />


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/saludresponde"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/salud_responde"
         />
    <ImageButton
        android:id="@+id/botonmapa"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mapa"/>

</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/verdeandroid"
            android:text="Cambiar Modo Vista"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/cambiarsesion"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/verdeandroid"
            android:src="@drawable/cambiarsesion" />

    </LinearLayout>


    





</LinearLayout>