<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:layout_height="match_parent"
    tools:context=".carteradeserviciosfragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/cartera_servicios" />

    <Button
        android:id="@+id/botonatencionabierta"
        android:layout_width="wrap_content"
        android:textColor="@color/blanco"
        android:background="@color/rojo"
        android:text="atención abierta"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/botonatencionurgencia"
        android:layout_width="wrap_content"
        android:textColor="@color/blanco"
        android:layout_marginBottom="15dp"
        android:background="@color/rojo"
        android:text="atención urgencia"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/botonatencioncerrada"
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/blanco"
        android:background="@color/rojo"
        android:text="atención Cerrada"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/botonapoyoclinico"
        android:layout_width="wrap_content"
        android:textColor="@color/blanco"
        android:background="@color/rojo"
        android:text="Apoyo Clínico"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

</LinearLayout>