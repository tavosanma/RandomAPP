<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    tools:context=".mainfarmacias"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombrePaciente"
        android:text="Nombre paciente: "
        android:textColor="@color/azul"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/fecha"
        android:textColor="@color/verde"
        android:text="Fecha y hora: "
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/doc"
        android:text="Nombre del Doctor: "
        android:textColor="@color/rojo"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
    android:id="@+id/areadoc"
    android:text="Area: "
    android:textColor="@color/naranjo"
    android:textSize="25sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
    android:id="@+id/Hubicacion"
    android:text="ubicacion: "
    android:textColor="@color/plomo"
    android:textSize="25sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

</LinearLayout>