<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".mainfarmacias"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:src="@drawable/logo_minsal" />

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/azul"
        android:text="* Revisa el listado de las farmacias de turno de toda la provincia del Bío-Bío y sus horarios de atención."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/azul"
        android:text="* La información desplegada corresponde a las farmacias de turno para el día actual hasta la madrugada del día siguiente."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
    android:layout_width="match_parent"
    android:textSize="15dp"
    android:id="@+id/ciudad"
    android:hint="INGRESE CIUDAD"
    android:inputType="text"
    android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listviewfarmacias"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>





</LinearLayout>